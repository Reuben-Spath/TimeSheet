<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context="com.Spath_Family.TimeSheet1.CreateEmployee">

    <ImageView
        android:id="@+id/info_ic_mng"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toTopOf="@+id/uyeEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/uyeEmpCode"
        app:layout_constraintTop_toBottomOf="@+id/uyeCompanyName"
        app:srcCompat="@drawable/ic_info" />

    <EditText
        android:id="@+id/uyeEmpCode"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="113dp"
        android:hint="@string/EmpCode"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/uyeEmail"
        app:layout_constraintEnd_toStartOf="@+id/info_ic_mng"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/uyeCompanyName"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/uyeCompanyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="78dp"
        android:hint="@string/title_create_company"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/info_ic_mng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCreateTitle"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/tvCreateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:text="@string/create_account"
        android:textColor="#9C27B0"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/uyeCompanyName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/uyeSignUp"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        android:background="#9C27B0"
        android:text="@string/sign_up"
        android:textColor="#FFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uyePasswordConfirm" />

    <EditText
        android:id="@+id/uyePasswordConfirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:ems="10"
        android:hint="@string/confirm_password_hint"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/uyeSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uyePassword"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/uyeEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:hint="@string/company_email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/uyePassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_ic_mng"
        tools:ignore="Autofill" />

    <EditText
        android:id="@+id/uyePassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:ems="10"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/uyePasswordConfirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uyeEmail"
        tools:ignore="Autofill" />

</androidx.constraintlayout.widget.ConstraintLayout>